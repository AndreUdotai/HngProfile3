<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.macbook.hngprofile3.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="276dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ubong"/>

        <TextView
            style="@style/MyTextStyle"
            android:text="UBONG UDOTAI"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000"/>
        
        <TextView
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text="@string/me_text"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:textColor="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/twitter_icon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/twittericon"
                android:onClick="openTwitter"/>

            <ImageView
                android:id="@+id/facebook_icon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/facebookicon"
                android:onClick="openFacebook"/>

            <ImageView
                android:id="@+id/slack_icon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/slackicon"
                android:onClick="openSlack"/>

            <ImageView
                android:id="@+id/github_icon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="openGitHub"
                android:src="@drawable/githubicon"/>

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/emailicon"
                android:onClick="openEmail"/>



        </LinearLayout>


    </LinearLayout>

</ScrollView>